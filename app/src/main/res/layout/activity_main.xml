<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id = "@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/yellow"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id = "@+id/streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Best Score  :"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"/>
            <TextView
                android:id = "@+id/streak_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "0"

                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/streak"/>
            <TextView
                android:id = "@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/score_val"
                android:layout_margin="16dp"
                android:text = "Score  :"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:id = "@+id/score_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:text = "0"

                android:textSize="15sp"/>
        </RelativeLayout>



        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a no. to play Factor Factor   :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/Entered_number_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint = "Enter the number"
            android:inputType="numberSigned"
            android:layout_margin="16dp"
            android:maxLength="7"/>

        <TextView
            android:id = "@+id/ttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click generate to play"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="16dp"/>

        <Button
            android:id = "@+id/generate"
            android:onClick="generateOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "generate"
            android:layout_margin="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIMER!  :"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="16dp"/>
            <TextView
                android:id = "@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textStyle="bold"

                android:textSize="16sp"
                android:padding="16dp" />
        </LinearLayout>


        <TextView
            android:id = "@+id/above_values_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the factor of the entered number."
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:id="@+id/random_number_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:onClick="button1"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/random_number_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:onClick="button2"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/random_number_3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:onClick="button3"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="2000dp"

            android:onClick="submit"
            android:text="submit"
            />
    </LinearLayout>

</ScrollView>

